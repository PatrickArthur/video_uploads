<%= form_for(@user, class: "form-horizontal") do |f| %>
<div class="form-group">
  <div class="col-xs-12">
    <%= f.label :email, 'Email:', class:'control-label col-xs-1 col-xs-offset-1' %>
    <div class="col-xs-4 ">
      <div id="missing_email"></div>
      <%= f.text_field :email, class:'form-control', placeholder:'Enter Email' %>
    </div>
  </div>

  <div class="col-xs-12">
    <%= f.label :name, 'Name:', class:'control-label col-xs-1 col-xs-offset-1' %>
    <div class="col-xs-4 ">
      <div id="missing_name"></div>
      <%= f.text_field :name, class:'form-control', placeholder:'Enter Name' %>
    </div>
  </div>

  <div class="col-xs-12">
    <%= f.label :address, 'Address:', class:'control-label col-xs-1 col-xs-offset-1' %>
    <div class="col-xs-4 ">
      <div id="missing_address"></div>
      <%= f.text_field :address, class:'add_form form-control', placeholder:'Enter Address' %>
    </div>
  </div>

  <div class="col-xs-12">
    <%= f.label :city, 'City:', class:'control-label col-xs-1 col-xs-offset-1' %>
    <div class="col-xs-4 ">
      <div id="missing_city"></div>
      <%= f.text_field :city, class:'form-control', placeholder:'Enter city' %>
    </div>
  </div>

  <div class="col-xs-12">
    <%= f.label :state, 'state:', class:'control-label col-xs-1 col-xs-offset-1' %>
    <div class="col-xs-4 ">
      <div id="missing_state"></div>
      <%= f.text_field :state, class:'form-control', placeholder:'Enter city' %>
    </div>
  </div>

  <div class="col-xs-12">
    <%= f.label :zip, 'zip:', class:'control-label col-xs-1 col-xs-offset-1' %>
    <div class="col-xs-4 ">
      <div id="missing_zip"></div>
      <%= f.text_field :zip, class:'form-control', placeholder:'Enter Zip' %>
    </div>
  </div>

  <div class="col-xs-12">
    <%= f.label :phone, 'phone:', class:'control-label col-xs-1 col-xs-offset-1' %>
    <div class="col-xs-4 ">
      <div id="missing_phone"></div>
      <%= f.text_field :phone, class:'form-control', placeholder:'Enter Email' %>
    </div>
  </div>

  <div class="col-xs-12">
    <div class="col-sm-offset-2 col-sm-6">
      <%= f.submit "Submit", class: "submit_bt btn btn-default" %>
      <button type="button" class="ref_form btn btn-secondary">Refresh</button>
    </div>
  </div>
</div>
<% end %>

